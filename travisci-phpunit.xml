<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="tests/unit/bootstrap.php" colors="true">
	<testsuites>
		<testsuite name="Nawala Framework">
			<directory>tests/unit</directory>
		</testsuite>
		<testsuite name="includes">
			<directory>tests/unit/includes</directory>
		</testsuite>
		<testsuite name="libraries">
			<directory>tests/unit/libraries</directory>
		</testsuite>
	</testsuites>

	<logging>
		<log type="coverage-text" target="php://stdout" lowUpperBound="35" highLowerBound="70" />
	</logging>
	<filter>
		<whitelist addUncoveredFilesFromWhitelist="true">
		</whitelist>
	</filter>
</phpunit>
